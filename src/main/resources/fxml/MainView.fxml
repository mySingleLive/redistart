                        <ImageView fx:id="imgvMaximize" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets left="14.0" top="8.0" />
                           </HBox.margin>
                           <image>
                              <Image url="@../image/icons_window_maximize_32px.png" />
                           </image>
