                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="F" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                      </Menu>
                      <Menu mnemonicParsing="false" text="编辑">
                        <items>
                          <MenuItem mnemonicParsing="false" text="Delete" />
                        </items>
