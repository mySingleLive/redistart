        <organizationName>DtFlyx</organizationName>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <openjfx.version>17.0.1</openjfx.version>
        <jfoenix.version>9.0.9</jfoenix.version>
        <controlsfx.version>11.0.1</controlsfx.version>
        <gson.version>2.8.4</gson.version>
        <ikonli.version>11.3.4</ikonli.version>
        <spring.version>5.1.1.RELEASE</spring.version>
        <spring-boot.version>2.1.1.RELEASE</spring-boot.version>
        <commons-io.version>2.7</commons-io.version>
        <guava.version>28.1-jre</guava.version>
        <redisson.version>3.11.1</redisson.version>
        <jsch.version>0.1.54</jsch.version>
        <common.lang.version>3.5</common.lang.version>
        <commons.collections.version>4.1</commons.collections.version>
        <mainClass>com.dtflys.redistart.utils.AppLauncher</mainClass>
        <info.name>RediStart</info.name>
        <info.displayName>RediStart</info.displayName>
    </properties>

    <repositories>
        <repository>
            <id>FontAwesomeFX</id>
            <url>https://bintray.com/jerady/maven/FontAwesomeFX</url>
        </repository>
